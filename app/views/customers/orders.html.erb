<div class="dashboard__header">
  <div class="container-fluid">
    <h2 class="dashboard__headline">
      Productos comprados
    </h2>
  </div>
</div>

<section class="container-fluid">
  <table class="table table-striped table-hover table-bordered footable toggle-arrow" id="js_footableOrders">
    <thead>
      <tr>
        <th data-hide="phone,tablet">#</th>
        <th data-hide="phone">Estado</th>
        <th data-hide="phone">Comprado hace</th>
        <th>De</th>
        <th>Producto</th>
        <th data-hide="phone,tablet">Contactar la tienda</th>
      </tr>
    </thead>
    <tbody>
      <%= render @orders %>
    </tbody>
  </table>
  <div class="paginator text-center">
    <%= paginate @orders %>
  </div>
</section>

<script>
  $(function($){
    $('#js_footableOrders').footable({ phone: 480 }); });
</script>
