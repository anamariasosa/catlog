<header class="sectionHero">
  <div class="container">
    <h2 class="">Detalles de la compra</h2>
  </div>
</header>

<section class="container">
  <div class="row">

    <div class="col-sm-6">
      <%= render 'product_and_store_details' %>
    </div>
    <div class="col-sm-6">
      <h2>Comprador</h2>
      <p><%= current_user.full_name %></p>
      <p>Contacto: <%= current_user.phone_number %> / <%= current_user.email %></p>
      <hr>
      <%= form_for([@product, @order]) do |f| %>
        <b>Método de pago</b>
        <div class="row">
          <% @payment_methods.each do |p_method| %>
          <div class="col-sm-4">
            <div class="radio">
              <label>
                <%= f.radio_button :payment_method, p_method, checked: true %>
                <%= p_method %>
              </label>
            </div>
          </div>
          <% end %>
        </div>
        <p> Dirección: <br> <%= f.text_field :address, value: current_user.address, class: 'form-control' %> </p>
        <p>
          Información adicional:
          <br>
          <%= f.text_area :details, cols: 40, rows: 8, placeholder: 'Detalles adicionales: Cómo llegar, horario, talla... etc.', class: 'form-control' %>
        </p>
        <hr>
        <h4>Total a pagar: <%= number_to_currency @order.total, precision:0 %></h4>

        <hr>
        <div class="actions">
          <%= f.submit 'Confirmar Orden', :class => 'btn btn-primary app__btn col-sm-6 '  %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 text-center"> </div>
  </div>
</section>
