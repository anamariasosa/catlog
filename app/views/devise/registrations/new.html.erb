
<section class="app__registration_container section wrapper special">
  <div class="inner">
    <header class="major">
      <h2>Editar información</h2>
      <p>Bienvenido , añade la información adicional</p>
    </header>

    <div class="app__registration_form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group app__registration_form-group">
          <%= f.label "Nombre de la Tienda" %>
          <%= f.text_field :store_name, autofocus: true %>
        </div>

        <div class="form-group app__registration_form-group">
          <%= f.label "Correo Electrónico" %>
          <%= f.email_field :email%>
        </div>

        <div class="form-group app__registration_form-group">
          <%= f.label "Información de domicilio" %>
          <%= f.text_area :address %>
        </div>

        <div class="form-group app__registration_form-group">
          <%= f.label "Celular" %>
          <%= f.telephone_field :phone_number %>
        </div>

        <div class="form-group app__registration_form-group">
          <%= f.label "Información adicional" %>
        </div>

        <div class="actions">
          <%= f.submit "Guardar", class: "button special col-md-12 col-sm-12 col-xs-12 col-lg-12" %>
        </div>

        <%= link_to "Política de Privacidad", legal_privacy_policy_path %>
      <% end %>
    </div>
  </div>
</section>
