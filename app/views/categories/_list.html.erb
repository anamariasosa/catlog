<div class="category">
  <ul class="category__list">

    <li class="category__item">
      <%= link_to "Todo", products_path, class: "category__link" %>
    </li>

    <% @categories.each do |category| %>
      <% cache category do %>
      <% unless category.isDefault? or category.products.count < 1 %>
        <li class="category__item">
          <%= link_to category.name, category, class: "category__link" %>
        </li>
      <% end %>
      <% end %>
    <% end %>

  </ul>
</div>
