<% content_for :title, @category.name + " - " %>

<% content_for :mobile_header do %>
  <h3 class="mobileHeader__headline"><%= @category.name %></h3>
<% end %>

<% content_for :headline do %>
  <h3 class="sectionHero__headline"><%= @category.name %></h3>
<% end %>

<section class="container">
  <div class="inner">

    <header>
      <%= render 'categories/list' %>
    </header>

    <div class="row">
      <%= render @products %>
    </div>

    <div class="paginator text-center">
      <%= paginate @products %>
    </div>
  </div>
</section>
