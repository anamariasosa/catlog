<div class="modal fade" id="loginModal" tabindex="-1" role="dialog">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <div class="modal-dialog" role="document">
    <div class="modal-content clearfix">
      <div class="modal-body">
        <h3 class="modal__title">¿Qué tipo de usuario eres?</h3>
        <div class="modal__container col-sm-6">
          <%= link_to user_omniauth_authorize_path(:instagram, model: 'customer'), class: "js_instagramLoad" do %>
            <%= image_tag "fan.png", class: "modal__image img-responsive"%>
          <% end %>
          <h4>Fan</h4>
        </div>
        <div class="modal__container col-sm-6">
          <%= link_to user_omniauth_authorize_path(:instagram, model: 'store'), class: "js_instagramLoad" do %>
            <%= image_tag "influencer.jpg", class: "modal__image img-responsive"%>
          <% end %>
          <h4>Influencer</h4>
        </div>
      </div>
    </div>
  </div>
</div>
