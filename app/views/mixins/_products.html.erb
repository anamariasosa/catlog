<div class="features clearfix">
  <% @products.each do |product| %>
    <div class="feature">
      <img src="<%= product.instagram_image %>" class="img-responsive" alt="catlog, productos, <%= product.user.store_name%>"></td>
      <h3 class="product_name"><%= product.product_name %></h3>
      <p>
        <%= number_to_currency product.price, precision:0 %>
      </p>
      <a href="<%= root_path + product.shortened_urls.last.unique_key %> "class="button special fit small">
        Más información
      </a>
    </div>
  <% end %>
</div>
