<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>


    <div class="alert alert-danger alert-dismissible alert alert-danger alert-dismissible col-xs-12 col-sm-12 col-md-12 col-lg-12" role="alert"  id="error_explanation">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span> Error:
      <span class="sr-only">Error:</span>
      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="app__product_form-container">
    <div class="form-group ">
      <% if @photo %>
        <img src="<%=@photo%>" alt="catlog, productos, instagram" class="img-responsive app__product_form-image col-lg-6 col-md-7 col-sm-12 ">
        <%= f.text_field :instagram_image, value: @photo, class: "hidden" %>
        <%= f.text_field :photo_id, value: @photo_id, class: "hidden" %>
      <% else %>
        <figure class="col-lg-6 col-md-7 col-sm-12 ">
          <img src="<%= @product.instagram_image %>" alt="catlog, productos, instagram" class="img-responsive app__product_form-image">
          <%= f.text_field :instagram_image, value: @product.instagram_image, class: "hidden" %>
        </figure>
      <% end %>
    </div>
    <div class="app_product_form-fields col-lg-6 col-md-5 col-sm-12 ">
      <div class="form-group">
        <%= f.label "Nombre del producto" %>
        <%= f.text_field :product_name, placeholder: "Ej: Bikini 3 piezas" %>
      </div>
      <div class="form-group">
        <%= f.label "Precio" %>
        <%= f.number_field :price, min:"0", inputmode:"numeric", pattern:"[0-9]*", title:"Non-negative integral number", placeholder: "$0 pesos" %>
      </div>
      <div class="form-group">
        <%= f.label "Unidades que tienes para vender" %>
        <%= f.number_field :quantity , min:"0", inputmode:"numeric", pattern:"[0-9]*", title:"Non-negative integral number", placeholder: "0 unidades"%>
      </div>
      <div class="form-group app__product_form-description ">
        <%= f.label "DescripciÃ³n" %>

        <%= f.trix_editor :description, class: "app__product_form--textarea-trix"%>
      </div>

    </div>

    <!--  The magic code will be generated before the creating -->

    <%= f.submit 'Guardar', :class => 'app__product_save button special col-md-6 col-md-offset-3 col-sm-offset-3 col-sm-6  col-xs-offset-3 col-xs-6 '  %>


  </div>
<% end %>
