<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>


    <div class="alert alert-danger alert-dismissible alert alert-danger alert-dismissible col-xs-12 col-sm-12 col-md-12 col-lg-12" role="alert"  id="error_explanation">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span> Error:
      <span class="sr-only">Error:</span>
      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="app__product_form-container">
    <div class="form-group ">
      <% if @photo %>
        <img src="<%=@photo%>" alt="" class="img-responsive app__product_form-image col-lg-6 col-md-6 col-sm-6 ">
        <%= f.text_field :instagram_image, value: @photo, class: "hidden" %>
      <% else %>
        <img src= <%= @product.instagram_image %> alt="" class="img-responsive app__product_form-image col-lg-6 col-md-6 col-sm-6">
      <% end %>
    </div>
    <div class="app_product_form-fields col-lg-6 col-md-6 col-sm-6 ">
      <% if !@photo %>
        <div class="form-group">
          <%= f.label "Url de la imagen" %>
          <%= f.text_field :instagram_image%>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label "Nombre del producto" %>
        <%= f.text_field :product_name %>
      </div>
      <div class="form-group">
        <%= f.label "Precio" %>
        <%= f.number_field :price %>
      </div>
      <div class="form-group">
        <%= f.label "Cantidad" %>
        <%= f.number_field :quantity %>
      </div>

    </div>

    <div class="form-group app__product_form-description col-md-12 col-sm-12 col-xs-12 col-lg-12">
      <%= f.label "DescripciÃ³n" %>

      <%= f.trix_editor :description, class: "app__product_form--textarea-trix"%>
    </div>
    <!--  The magic code will be generated before the creating -->
    <div class="actions text-center">
      <%= f.submit 'Guardar', :class => 'button special col-md-12 col-sm-12 col-xs-12 col-lg-12'  %>
    </div>
  </div>
<% end %>
