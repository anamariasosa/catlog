<section id="six" class="section list-container wrapper special">
  <div class="inner">
    <header class="major">
      <h2 class="list-headline">Mis productos</h2>
    </header>
      <p id="notice"><%= notice %></p>
    <% if @products.count > 0 %>
      <table class="table table-striped table-hover footable toggle-arrow" id="table">
        <thead>
          <tr class="list-fields">
            <th>Imagen</th>
            <th>Nombre</th>
            <th data-hide="phone">Precio</th>
            <th data-hide="phone,tablet">Cantidad</th>
            <th data-hide="phone,tablet">Descripción</th>
            <th data-hide="phone">Código</th>
            <th colspan="3">Acciones</th>
          </tr>
        </thead>

        <tbody id="products">
          <%= render "products" %>
        </tbody>
      </table>

      <script>
        jQuery(function($){ $('#table').footable({ phone: 480 }); });
      </script>
    <% else %>
      <p>Actualmente no tienes productos, convierte algunos desde tu
        <%= link_to 'Tablero', users_dashboard_path %>
      </p>
    <% end %>
  </div>
</section>
