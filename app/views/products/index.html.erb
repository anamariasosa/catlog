<header class="sectionHero">
  <div class="container">
    <h2 class="">Mis productos</h2>
  </div>
</header>

<section class="container">

  <% if @products.count > 0 %>
    <table class="table table-striped table-hover footable toggle-arrow" id="table">
      <thead>
        <tr class="list-fields">
          <th>Imagen</th>
          <th class="list-link">
            <%= sortable "Nombre", "product_name" %>
          </th>
          <th data-hide="phone" class="list-link">
            <%= sortable "Precio", "price" %>
          </th>
          <th data-hide="phone,tablet" class="list-link">
            <%= sortable "Cantidad", "quantity" %>
          </th>
          <th data-hide="phone,tablet">Descripción</th>
          <th data-hide="phone">Código</th>
          <th colspan="3">Acciones</th>
        </tr>
      </thead>

      <tbody id="products">
        <%= render "products" %>
      </tbody>
    </table>

    <script>
      $(function($){ $('#table').footable({ phone: 480 }); });

      $(document).ready(function() {
        $('.list-link a').append('<i class="glyphicon glyphicon-chevron-down rotate"></i>')
      });
    </script>
  <% else %>
    <p>Actualmente no tienes productos, convierte algunos desde tu
      <%= link_to 'Tablero', users_dashboard_path %>
    </p>
  <% end %>
</section>
