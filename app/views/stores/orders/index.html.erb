<%= stylesheet_link_tag 'print', media: 'print' %>

<div class="dashboard__header">
  <div class="container-fluid">
    <h2 class="dashboard__headline">
      Órdenes de producto
      <a href="javascript:window.print()" class="hidden-print btn btn-sm btn-default">Imprimir órdenes</a>
    </h2>
  </div>
</div>

<section class="container-fluid">
  <table class="table table-striped table-hover table-bordered footable toggle-arrow" id="js_footableOrders">
    <thead>
      <tr class="list-fields">
        <th data-hide="phone,tablet">#</th>
        <th data-hide="phone">Estado</th>
        <th data-hide="phone,tablet">Creada hace</th>
        <th>Por</th>
        <th class="text-center">Comprando</th>
        <th data-hide="phone,tablet">Contacto</th>
        <th class="hidden-print" data-hide="phone">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'orders/order', collection: @orders %>
    </tbody>
  </table>
</section>

<script>
  $(function($){
    $('#js_footableOrders').footable({ phone: 480 }); });
</script>
