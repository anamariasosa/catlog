<%= stylesheet_link_tag 'print', media: 'print' %>

<div class="dashboard__header">
  <div class="container-fluid">
    <h2 class="dashboard__headline">
      Órdenes de producto
      <a href="javascript:window.print()" class="hidden-print btn btn-sm btn-default">Imprimir órdenes</a>
    </h2>
  </div>
</div>

<section class="container-fluid">
  <table class="table table-hover">
    <tr>
      <th>#</th>
      <th>Estado</th>
      <th>Creada hace</th>
      <th>Por</th>
      <th>Comprando</th>
      <th>Método de pago</th>
      <th>Contacto</th>
      <th class="hidden-print">Acciones</th>
    </tr>
    <tbody>
      <%= render partial: 'orders/order', collection: @orders %>
    </tbody>
  </table>
</section>
