<section class="section app__product-container wrapper special">

  <div class="inner row-height">
    <div class=" col-xs-12 col-md-6 col-lg-6 col-sm-6 col-height">
      <img src="<%= @user.store_image %>" class="stores-img" alt="<%=  @user.store_name %>">

    </div>

    <div class="app__product-caption caption col-xs-12 col-md-6 col-lg-6 col-sm-6 col-height ">
      <header class="major app__product-headline">
        <h2><%= @user.store_name %></h2>
      </header>

      <p>
        <span class="app__bold-text"> Correo Electrónico:</span>
        <%= mail_to @user.email %>
      </p>

      <p>
        <span class="app__bold-text">Celular:</span>
        <%= @user.phone_number %>
      </p>

      <p>
        <span class="app__bold-text">Dirección:</span>
        <%= @user.address %>
      </p>

      <p>
        <span class="app__bold-text">Información adicional:</span>
        <%= @user.delivery_info%>
      </p>

      <p>
        <span class="app__bold-text">Cuenta de Instagram:</span>
        <a href="https://www.instagram.com/<%= @user.store_account %>" target="_blank"><%= @user.store_account %></a>
      </p>
    </div>
  </div>
</section>
