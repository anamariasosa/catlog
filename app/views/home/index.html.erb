<% content_for :meta_tags do %>
  <meta property="og:url"                  content="<%= request.original_url %>" />
  <meta property="og:type"                 content="article" />
  <meta property="og:title"                content="Catlog.co" />
  <meta property="og:site_name"            content="Catlog" />
  <meta property="og:description"          content="<%= t 'web.description' %>" />
  <meta property="og:image"                content="facebook.png" />

  <meta name="twitter:card"         content="summary" />
  <meta name="twitter:site"         content="@catlog_co" />
  <meta name="twitter:title"        content="catlog.co" />
  <meta name="twitter:description"  content="<%= t 'web.description' %>" />
  <meta name="twitter:image"        content="favicon.png" />
<% end %>

<% content_for :mobile_header do %>
  <h3 class="mobileHeader__headline">Catlog.co</h3>
<% end %>

<%= render "home/intro" %>
<%= render "home/recent" %>
<%= render partial: "home/recent_by_category", locals: { bags: @bags } %>

<% if not user_signed_in? %>
  <%= render partial: "home/login", locals: { devise_login: false } %>
<% end %>
<%= render "home/partners" %>
