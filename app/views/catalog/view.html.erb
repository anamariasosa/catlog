<section id="two" class="section app__catalog-container wrapper special">

  <div class="inner">
    <header class="major">
      <h2 class="app__catalog-headline">Catálogo</h2>
      <br>
      <%= link_to "Ver catálogo animado", catalog_flipbook_path, class: "app__catalog_link-book btn btn-default hidden-xs" %>
    </header>
    <div class="app__catalog-gallery ">

      <% @catalog_products.each do |product| %>
        <div class=" thumbnail app__catalog_gallery-thumbnail col-xs-6 col-sm-4 col-md-3 col-lg-4">
          <a href="<%= product.instagram_image %>" data-lightbox="image-1" data-title="<%= product.product_name %> - Valor: <%= number_to_currency product.price, precision:0 %>">
            <img src="<%= product.instagram_image %>" class="app__catalog_gallery-img img-responsive" alt="product">
            <span class="app__catalog_gallery-zoom"><i class="fa fa-search-plus"></i></span>
          </a>
          <div class="app__catalog_gallery-caption caption">
            <h3 class="product_name"><%= product.product_name %></h3>
            <p class="app__catalog-price">
              Precio:
            </p>
            <p class="app_catalog-price--val">
              <%= number_to_currency product.price, precision:0 %>
            </p>
            <p class="app__catalog-quantity">
              Disponibles: <%=  product.quantity %>
            </p>
            <p class="app__catalog-description">
              Descripción: <br> <%=  product.description.html_safe %>
            </p>
            <% if session[:access_token] %>


              <div class="book__admin-action--container text-right">
                <%= link_to  edit_product_path(product) do %>

                   <i class=" book__admin-action--item fa fa-pencil"></i>
                <% end %>

                <%= link_to product, method: :delete, data: { confirm: '¿Está seguro que desea eliminarlo?' } do%>
                    <i class=" book__admin-action--item fa fa-trash-o"></i>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="app__catalog-paginator text-center">
      <%= paginate @catalog_products %>
    </div>
  </div>
</section>